<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="args"
            type="com.puzheng.area_investigation.RegionListFragment.Args" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="@{args.loading? View.VISIBLE: View.GONE}" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/empty_image_view_margin"
            android:src="@drawable/no_data"
            android:visibility="@{args.loading || args.itemNo > 0? View.GONE: View.VISIBLE}"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.puzheng.area_investigation.AreaFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="@{args.loading || args.itemNo == 0? View.GONE: View.VISIBLE}"
            app:layoutManager="LinearLayoutManager"
            tools:context="com.puzheng.area_investigation.RegionListFragment"
            tools:listitem="@layout/fragment_area" />

    </FrameLayout>

</layout>
